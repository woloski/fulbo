@model IEnumerable<Fulbo.Models.Match>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            HomeTeam
        </th>
        <th>
            AwayTeam
        </th>
        <th>
            HomeScore
        </th>
        <th>
            AwayScore
        </th>
        <th>
            Date
        </th>
        <th>
            Fixture
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@(item.HomeTeam == null ? "None" : item.HomeTeam.Name)
        </td>
        <td>
			@(item.AwayTeam == null ? "None" : item.AwayTeam.Name)
        </td>
        <td>
			@item.HomeScore
        </td>
        <td>
			@item.AwayScore
        </td>
        <td>
			@String.Format("{0:g}", item.Date)
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Fixture).ToString()
        </td>
    </tr>
}

</table>


