@model Fulbo.Models.Fixture

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Fixture</legend>

    <div class="display-label">Number</div>
    <div class="display-field">@Model.Number</div>

    <div class="display-label">Season</div>
    <div class="display-field">@Model.Season</div>

    <div class="display-label">Matches</div>
    <div class="display-field">@(Model.Matches == null ? "None" : Model.Matches.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


