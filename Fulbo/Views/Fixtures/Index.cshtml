@model IEnumerable<Fulbo.Models.Fixture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Number
        </th>
        <th>
            Season
        </th>
        <th>
            Matches
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Number
        </td>
        <td>
			@item.Season
        </td>
        <td>
			@(item.Matches == null ? "None" : item.Matches.Count.ToString())
        </td>
    </tr>
}

</table>


