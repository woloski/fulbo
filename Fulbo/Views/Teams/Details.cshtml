@model Fulbo.Models.Team

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Team</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">HomeMatches</div>
    <div class="display-field">@(Model.HomeMatches == null ? "None" : Model.HomeMatches.Count.ToString())</div>

    <div class="display-label">AwayMatches</div>
    <div class="display-field">@(Model.AwayMatches == null ? "None" : Model.AwayMatches.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


