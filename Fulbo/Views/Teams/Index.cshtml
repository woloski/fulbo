@model IEnumerable<Fulbo.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            HomeMatches
        </th>
        <th>
            AwayMatches
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.HomeMatches == null ? "None" : item.HomeMatches.Count.ToString())
        </td>
        <td>
			@(item.AwayMatches == null ? "None" : item.AwayMatches.Count.ToString())
        </td>
    </tr>
}

</table>


